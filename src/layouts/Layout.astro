---
import MobileSidebar from '@/components/MobileSidebar.astro'
import Navbar from '@/components/Navbar.astro'
import Sidebar from '@/components/Sidebar.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html data-theme="dark" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="grid">
			<header class="header">
				<Navbar />
			</header>
			<aside class="sidebar">
				<Sidebar />
			</aside>
			<aside class="mobile-sidebar">
				<MobileSidebar />
			</aside>
			<main class="content">
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	[data-theme="light"] {
		--main-background: #ffffff;
		--secundary-background: #f1f1f2;
		--main-color: rgb(22, 24, 35);
		--secundary-color: #a7a7a7;
		--border-color: #e7e7e7;
		--navbar-height: 60px;
		--sidebar-width: 240px;
		--hover-background: #e7e7e9;
		/* --red-color: #fe2c55; */
		--red-color: #ff6f87;
		--gray-color: #5c5c5c;
		--mobile-nav-height: 40px;
		--mobile-sidebar-width: 70px;
	}

	[data-theme="dark"] {
		--main-background: #121212;
		--secundary-background: #2f2f2f;
		--main-color: #e7e7e7;
		--secundary-color: #a0a0a0;
		--border-color: #282828;
		--navbar-height: 60px;
		--sidebar-width: 240px;
		--hover-background: #3f3f3f;
		/* --red-color: #ff3b5c; */
		--red-color: #ff6f87;
		--gray-color: rgba(255, 255, 255, 0.9);
		--mobile-nav-height: 40px;
		--mobile-sidebar-width: 70px;
	}

	@font-face {
		font-family: 'TikTok';
		src: url('/fonts/TikTokFont-Regular.woff2') format('woff2');
		font-display: swap;
	}

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		font-family: TikTok, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	}
	html {
		background: var(--main-background);
	}
	a{
		text-decoration: none;
		color: var(--main-color);
	}
	ul {
		list-style-type: none;
	}
</style>

<style>
	.grid{
		display: grid;
		grid-template-areas: "header header" "sidebar content";
		grid-template-rows: var(--navbar-height) 1fr;
		grid-template-columns: var(--sidebar-width) 1fr;
	}
	.sidebar {
		position: fixed;
		top: var(--navbar-height);
		left: 0;
		width: var(--sidebar-width);
		grid-area: sidebar;
	}

	.header {
		height: var(--navbar-height);
		grid-area: header;
		width: 100%;
		background: var(--main-background);
		position: fixed;
		top: 0;
		left: 0;
		z-index: 1;
	}
	.mobile-sidebar {
		display: none;
		position: fixed;
		height: calc(100vh - var(--navbar-height));
		height: calc(100svh - var(--navbar-height));
		height: calc(100dvh - var(--navbar-height));
		top: var(--navbar-height);
		left: 0
		width: var(--mobile-sidebar-width);
		background: var(--main-background);
		z-index: 1;
		grid-area: mobile-sidebar;
	}

	.content {
		grid-area: content;
		height: 400px;
		width: 100%;
	}

	@media (width <= 1000px) {
		.grid{
			grid-template-areas: "header header" "mobile-sidebar content";
			grid-template-rows: var(--navbar-height) 1fr;
			grid-template-columns: var(--mobile-sidebar-width) 1fr;
		}
		.sidebar {
			display: none;
		}
	}
	@media (width >= 450px) and (width <= 1000px){
		.mobile-sidebar {
			display: block;
		}
	}
	@media (width <= 450px) {
		.grid {
			grid-template-areas: "content";
			grid-template-rows: 1fr;
			grid-template-columns: 1fr;
		}
		.header{
			display: none;
		}
		.sidebar {
			display: none;
		}
		.content {
			height: 100vh;
			height: 100svh;
			height: 100dvh;
			width: 100vw;
		}
	}

</style>
