---
import UserIcon from '@/icons/UserIcon.astro'
import FavoritesIcon from '@/icons/FavoritesIcon.astro'
import GetCoinsIcon from '@/icons/GetCoinsIcon.astro'
import SettingsIcon from '@/icons/SettingsIcon.astro'
import EnglishIcon from '@/icons/EnglishIcon.astro'
import FeedbackIcon from '@/icons/FeedbackIcon.astro'
import ShortcutsIcon from '@/icons/ShortcutsIcon.astro'
import DarkModeIcon from '@/icons/DarkModeIcon.astro'
import LogOutIcon from '@/icons/LogOutIcon.astro'
import ThemeButton from './ThemeButton.astro'
---

<nav class="settings">
	<ul class="menu">
		<li class="item">
			<a aria-label="View your profile" class="link" href="#">
				<UserIcon />
				<span>View Profile</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="View your favorite videos" class="link" href="#">
				<FavoritesIcon />
				<span>Favorites</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="Get more Coins" class="link" href="#">
				<GetCoinsIcon />
				<span>Get Coins</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="Live Studio" class="link" href="#">
				<FavoritesIcon />
				<span>LIVE Studio</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="More Settings" class="link" href="#">
				<SettingsIcon />
				<span>Settings</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="Change the language" class="link" href="#">
				<EnglishIcon />
				<span>English</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="Help us to improve with feedback" class="link" href="#">
				<FeedbackIcon />
				<span>Feedback and help</span>
			</a>
		</li>
		<li class="item">
			<a aria-label="Keyboard shortcuts for more accesibility" class="link" href="#">
				<ShortcutsIcon />
				<span>Keyboard shortcuts</span>
			</a>
		</li>
		<li class="item">
				<DarkModeIcon />
				<span>Dark mode</span>
				<ThemeButton />
		</li>
		<li class="item logout">
			<a aria-label="Log Out" class="link" href="#">
				<LogOutIcon />
				<span>Log Out</span>
			</a>
		</li>
	</ul>
</nav>

<style>
	.settings {
		position: relative;
		background: var(--secundary-background);
		color: var(--main-color);
		width: fit-content;
		border-radius: 0.5rem;
		box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
		padding: 0.5rem 0rem;
	}
	.item{
		height: 40px;
		width: 100%;
		display: flex;
		justify-content: flex-start;
		align-items: center;
		padding: 0rem 1.5rem;
		gap: 0.8rem;
		white-space: nowrap;
		font-weight: bold;
	}
	.item:hover {
		background: var(--hover-background);
	}
	.link{
		height: 100%;
		width: 100%;
		display: flex;
		gap: 0.8rem;
		justify-content: flex-start;
		align-items: center;
		font-weight: bold;
	}
	.logout{
		border-top: 1px solid var(--border-color);
	}
</style>
