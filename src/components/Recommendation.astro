---
interface Props {
	title: string;
	description: string;
	type: string;
}

const { title, description, type } = Astro.props
---

<section class="recommendation">
	<header class="header">
		<div class="info">
			<div class="profile">
				<img class="avatar" src="https://unavatar.io/github/andr3sc0des" alt="User Profile">
			</div>
			<article class="details">
				<h2 class="channel">{title}</h2>
				<p class="description">{description}</p>
			</article>
		</div>
			{type === 'foryou' ? <button class="btn">Follow</button> : ''}
	</header>

	<footer class="footer">
		<div class="video">Video</div>
		<div class="actions"></div>
	</footer>

	</section>
<style>
	.info {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		gap: 1rem;
	}
	.channel {
		font-weight: 700;
		font-size: 18px;
	}
	.description {
		line-height: 1.3;
		font-size: 16px;
	}
	.avatar {
		width: 55px;
		height: 55px;
		border-radius: 50%;
	}
	.header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
	}
	.recommendation{
		color: var(--main-color);
		width: 730px;
		margin: 0 auto;
		padding: 1rem 10px;
		border-bottom: var(--border-color) 1px solid;
	}
	.btn{
		background: transparent;
		color: var(--red-color);
		border: 1px solid var(--red-color);
		padding: 0.5rem 1rem;
		font-size: 16px;
		cursor: pointer;
		border-radius: 0.2rem;
		font-weight: bold;
	}
	.btn:hover {
		background: #251618;
	}
	.footer {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 0.5rem;
	}
	.video{
		width: 315px;
		height: 560px;
		border-radius: 1rem;
		display: flex;
		justify-content: center;
		align-items: center;
		border: 1px solid var(--main-color);
	}
</style>
